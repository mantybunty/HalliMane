<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nata.hallimane.Rommcharges">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*">
        <TableRow
            android:id="@+id/chargesRows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/RType"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Room"
                android:textColor="#311B92" />
            <TextView
                android:id="@+id/Rinrsbr"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Single Bed "
                android:textColor="#311B92" />
            <TextView
                android:id="@+id/RTusddbr"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Double Bed "
                android:textColor="#311B92" />
            <TextView
                android:id="@+id/Rtotrooms"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Total"
                android:textColor="#311B92" />
        </TableRow>
        <TableRow
            android:id="@+id/chargesRows2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/RType1"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Type"
                android:textColor="#311B92" />
            <TextView
                android:id="@+id/Rinrsbr1"
                android:layout_weight="1"
                android:gravity="center"
                android:text="in Rupees"
                android:textColor="#311B92" />
            <TextView
                android:id="@+id/RTusddbr1"
                android:layout_weight="1"
                android:gravity="center"
                android:text="in Rupees"
                android:textColor="#311B92" />
            <TextView
                android:id="@+id/Rtotrooms1"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Rooms"
                android:textColor="#311B92" />
        </TableRow>
        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:divider="#FFFFFF"
            android:dividerHeight="3dp"
            android:background="@drawable/my_button_bg">
        </ListView>
        <!--
        <Button
            android:id="@+id/Rlogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button_bg"
            android:text="Logout"
            android:gravity="center"/>-->
    </TableLayout>
</LinearLayout>
